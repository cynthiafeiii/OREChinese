@model OREChinese.Data.UnitVideo
@{
    ViewData["Title"] = "单元列表";
}
<div>
    <button onclick="location.href=unitedit"></button>
    @Html.ActionLink("新增", "videoadd", new { id =Model.UnitId });

</div>

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<table border="1">
    <tr>
        <th>名称</th>
        <th>操作</th>
    </tr>
    @foreach (var video in Model.Videos)
    {
        <tr>
            <td>@video.Name</td>

            <td>
                @Html.ActionLink("修改", "VideoEdit", new { id = video.Id })
                |
                @Html.ActionLink("删除", "VideoDelete", new { id = video.Id }, new { onclick = "return confirm('确定要删除吗？')" })
            </td>

        </tr>
    }
</table>


